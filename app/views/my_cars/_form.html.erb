<%= form_with(model: my_car, local: true) do |form| %>
  <% if my_car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(my_car.errors.count, "error") %> prohibited this my_car from being saved:</h2>

      <ul>
      <% my_car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :my_car_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :my_car_description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :my_car_date %>
  </div>

  <div class="field">
    <%= form.label :user_id_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
